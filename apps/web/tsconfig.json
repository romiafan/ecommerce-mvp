{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*"],
      "@/components/*": ["./components/*"],
      "@/lib/*": ["./lib/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/types/*": ["./types/*"],
      "@/convex/*": ["../../convex/*"],
      "@ecommerce/ui": ["../../packages/ui"],
      "@ecommerce/ui/*": ["../../packages/ui/*"],
      "@ecommerce/database": ["../../packages/database"],
      "@ecommerce/database/*": ["../../packages/database/*"],
      "@ecommerce/config": ["../../packages/config"],
      "@ecommerce/config/*": ["../../packages/config/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/**/*.d.ts",
    "../../packages/ui/**/*.ts",
    "../../packages/ui/**/*.tsx",
    "../../packages/database/**/*.ts",
    "../../packages/config/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
